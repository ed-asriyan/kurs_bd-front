{{#if user.view.moderator}}
  <button {{action "createslang"}}>Create slang</button>
{{/if}}
<table class="table table-hover">
  <thead>
  <tr>
    <th>Slang</th>
    <th>Description</th>
    {{#if user.view.moderator}}
      <th>Manage</th>
    {{/if}}
  </tr>
  </thead>
  <tbody>
  {{#if slangs}}
    {{#each slangs as |slang|}}
      <tr class="">
        <td>{{slang.slang}}</td>
        <td>{{slang.description}}</td>
        {{#if user.view.moderator}}
          <td>
            <button {{action "changeslang" slang}}>Change</button>
            <button>Delete</button>
          </td>
        {{/if}}
      </tr>
    {{/each}}
  {{else}}
    <h2 align="middle">Loading...</h2>
  {{/if}}
  </tbody>
</table>