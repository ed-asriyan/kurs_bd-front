{{#if user.view.moderator}}
  <button {{action "createdialect"}}>Создать диалект</button>
{{/if}}
<table class="table table-hover">
  <thead>
  <tr>
    <th>Диалект</th>
    <th>Язык</th>
    <th>Описание</th>
    {{#if user.view.moderator}}
      <th>Управление</th>
    {{/if}}
  </tr>
  </thead>
  <tbody>
  {{#if dialects}}
    {{#each dialects as |dialect|}}
      <tr class="">
        <td>{{dialect.dialect}}</td>
        <td>{{dialect.language}}</td>
        <td>{{dialect.description}}</td>
        {{#if user.view.moderator}}
          <td>
            <button {{action "changedialect" dialect}}>Изменить</button>
            <button {{action "deletedialect" dialect}}>Удалить</button>
          </td>
        {{/if}}
      </tr>
    {{/each}}
  {{/if}}
  </tbody>
</table>