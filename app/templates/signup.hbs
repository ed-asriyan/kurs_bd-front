<div class="col-md-6 col-md-offset-3">
  <form class="form-horizontal">
    <div class="form-group {{unless isEmailValid 'has-error'}}">
      <label class="col-sm-2 control-label">Email</label>
      <div class="col-sm-10">
        {{input value=email class='form-control' placeholder='E-mail' type="email"}}
      </div>
    </div>
    <div class="form-group {{unless isNicknameValid 'has-error'}}">
      <label class="col-sm-2 control-label">Nickname</label>
      <div class="col-sm-10">
        {{input value=nickname class='form-control' placeholder='Nickname' type="text"}}
      </div>
    </div>
    <div class="form-group {{unless isPasswordValid 'has-error'}}">
      <label class="col-sm-2 control-label">Password</label>
      <div class="col-sm-10">
        {{input value=password class='form-control' placeholder='Password' type="password"}}
      </div>
    </div>
    <div class="form-group {{unless isPasswordRepeatValid 'has-error'}}">
      <label class="col-sm-2 control-label">Password</label>
      <div class="col-sm-10">
        {{input value=passwordRepeat class='form-control' placeholder='Password again' type="password"}}
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button class="btn btn-default" {{action 'submit'}} disabled="{{unless isFormValid 'disabled'}}">Sign Up
        </button>
      </div>
    </div>
  </form>
</div>
