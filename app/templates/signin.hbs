<div class="col-md-6 col-md-offset-3">
  <form class="form-horizontal">
    <div class="form-group {{unless isNicknameValid 'has-error'}}">
      <label class="col-sm-2 control-label">Ник</label>
      <div class="col-sm-10">
        {{input value=nickname class='form-control' placeholder='Nickname' type="text"}}
      </div>
    </div>
    <div class="form-group {{unless isPasswordValid 'has-error'}}">
      <label class="col-sm-2 control-label">Пароль</label>
      <div class="col-sm-10">
        {{input value=password class='form-control' placeholder='Password' type="password"}}
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button class="btn btn-default" {{action 'submit'}} disabled="{{unless isFormValid 'disabled'}}">
          Вход
        </button>
      </div>
    </div>
  </form>
</div>
