<span>Input word for convert: </span>
{{input value=word class='convert__word' placeholder='word' type="text"}}
<span>Dialect:</span>
<select class="convert__select_dialects" onchange={{action 'getdialect' value="target.value"}}>
  {{#each select_dialects as |dialect|}}
    <option>{{dialect.dialect}}</option>
  {{/each}}
</select>
<button {{action "convert"}}>Convert</button>
{{#if user.view.moderator}}
  <button {{action "createsymbol"}}>Create symbol</button>
{{/if}}
<table class="table table-hover">
  <thead>
  <tr>
    <th>Symbol</th>
    <th>Dialect</th>
    <th>Description</th>
    <th>Download</th>
    {{#if user.view.moderator}}
      <th>Manage</th>
    {{/if}}
  </tr>
  </thead>
  <tbody>
  {{#if symbols}}
    {{#each symbols as |symbol|}}
      <tr class="">
        <td>{{symbol.symbol}}</td>
        <td>{{symbol.dialect}}</td>
        <td>{{symbol.description}}</td>
        <td>
          <a href="{{symbol.url}}" class="btn btn-info" target="_blank">Download</a>
        </td>
        {{#if user.view.moderator}}
          <td>
            <button {{action "changesymbol" symbol}}>Change</button>
            <button {{action "deletesymbol" symbol}}>Delete</button>
          </td>
        {{/if}}
      </tr>
    {{/each}}
  {{/if}}
  </tbody>
</table>