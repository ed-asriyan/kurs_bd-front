{{input value=word class='createword__inputword' placeholder='new word' type="text"}}
<span>Dialect:</span>
<select class="createword__select_dialects" onchange={{action 'getdialect' value="target.value"}}>
  <option>All</option>
  {{#each select_dialects as |dialect|}}
    <option>{{dialect.dialect}}</option>
  {{/each}}
</select>
<span>Slang:</span>
<select class="createword__select_slangs" onchange={{action 'getslang' value="target.value"}}>
  <option>All</option>
  {{#each select_slangs as |slang|}}
    <option>{{slang.slang}}</option>
  {{/each}}
</select>
<span>Description:</span>
<textarea onchange={{action 'getdescription' value='target.value'}}></textarea>
{{input value=file class='createword__inputfile' placeholder='new word' type="file"}}
<button onclick={{action 'changeword' this.files}}>Создать</button>
